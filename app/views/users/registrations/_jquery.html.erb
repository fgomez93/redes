<script>
  $(document).ready(function(){

    $("#user_email").focus(function(){
      $("#formato_email").css("display", "block").fadeOut(4000);
    });
    $("#user_password").focus(function(){
      $("#formato_error").css("display", "block").fadeOut(4000);
    });

    $("#bEnviar").click(function(){
      var email = $("#user_email").val();
      var passw = $("#user_password").val();
      var expre= /^[a-zA-Z0-9\._-]+@[a-zA-Z0-9-]{2,}[.][a-zA-Z]{2,4}$/ ;
      var expre2 =   /^[a-z0-9_-]{6,24}$/;
      var formato = expre.test(email);
      var formato2 = expre2.test(passw);
      if(email=="" || (formato == false) ){
        $("#error_email").css("display" ,"block");
        $("#user_email").css("background" ,"red");
      }else{
        $("#error_email").css("display" ,"none");
        $("#user_email").css("background" ,"green");
      }
      if(passw=="" || (formato2 == false)){
        $("#error_password").css("display","block");
         $("#user_password").css("background" ,"red");
      }else{
        $("#error_password").css("display","none")
        $("#user_password").css("background" ,"green");
      }
      if(passw=="" || email=="" || (formato == false) || (formato2 == false)){return false;}
    });
  });

</script>