<div class="page-header">
  <h1>Todas las apelaciones  disponibles</h1>
</div>
<% @apelar.each do |apelar| %>
  <div class="apelars">
  <hr>
      <p>
     	<h1>Razon para apelar </h1>
        <strong>
          <h6><%= apelar.razon %></h6>
        </strong>
      </p>
      <p>
     	<h1>Razon de la denuncia </h1>
        <strong>
          <h6><%= apelar.denuncia.razon%></h6>
        </strong>
      </p>
      <div class="navegacion">
        <%= link_to " la apelacion fue hecha hace "+ time_ago_in_words(apelar.created_at), ver_apelelacion_path(apelar.id)  %>
      </div>
  </div>
  <hr>
<% end %>
<hr>
